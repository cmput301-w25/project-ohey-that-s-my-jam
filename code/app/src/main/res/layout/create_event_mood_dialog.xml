<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:scaleX="1"
    android:scaleY="1">

    <!-- Close Button (X) at the top right -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@mipmap/exit_foreground" />
    </RelativeLayout>

    <!-- Mood Selection (Chips with specified colors) -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Mood"
        android:textSize="16sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Chips for Mood Selection -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipAnger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="ANGER"
                android:textColor="#80B00020"
                app:chipBackgroundColor="#61B00020"
                app:chipStrokeColor="@android:color/transparent"
                app:chipTextColor="#000000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDisgust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="DISGUST"
                android:textColor="#09851D"
                app:chipBackgroundColor="#6109851D"
                app:chipStrokeColor="@android:color/transparent"
                app:chipTextColor="#FFFFFF" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="HAPPY"
                android:textColor="#FF1D89"
                app:chipBackgroundColor="#61FF1D89"
                app:chipStrokeColor="@android:color/transparent"
                app:chipTextColor="#000000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="FEAR"
                android:textColor="#310566"
                app:chipBackgroundColor="#615600E8"
                app:chipStrokeColor="@android:color/transparent"
                app:chipTextColor="#000000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="SAD"
                android:textColor="#1554F6"
                app:chipBackgroundColor="#611554F6"
                app:chipStrokeColor="@android:color/transparent"
                app:chipTextColor="#000000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipShame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="SHAME"
                android:textColor="#964B00"
                app:chipBackgroundColor="#61964B00"
                app:chipStrokeColor="@android:color/transparent"
                app:chipTextColor="#000000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipConfuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="CONFUSION"
                android:textColor="#FFE000"
                app:chipBackgroundColor="#61FFE000"
                app:chipStrokeColor="@android:color/transparent"
                app:chipTextColor="#000000" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSurprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="SURPRISE"
                android:textColor="#FFA500"
                app:chipBackgroundColor="#61FFA500"
                app:chipStrokeColor="@android:color/transparent"
                app:chipTextColor="#000000" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Reason TextBox -->

    <EditText
        android:id="@+id/reasonEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Reason Why"
        android:inputType="textMultiLine"
        android:maxLines="4" />

    <!-- Trigger TextBox -->

    <EditText
        android:id="@+id/triggerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Trigger"
        android:inputType="textMultiLine"
        android:maxLines="4" />

    <!-- Mood Option Buttons -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Social Situation"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/buttonGroupMoodOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAlone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="Alone"
            android:textColor="#193F80" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="14dp"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="1"
            android:textColor="#193F80" />

        <Button
            android:id="@+id/button2plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="2+"
            android:textColor="#193F80" />

        <Button
            android:id="@+id/buttonCrowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="Crowd"
            android:textColor="#193F80" />

    </LinearLayout>

    <!-- Button to add an image -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:scaleType="fitXY"

            app:srcCompat="@mipmap/location_foreground" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/imageButtonAddImage"
            android:layout_width="31dp"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@mipmap/add_photo_foreground" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="Post"
            android:textColor="#193F80" />
    </LinearLayout>

</LinearLayout>
