<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:scaleX="1"
    android:scaleY="1">

    <!-- Close Button  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/ExitCreateMoodEvent"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close" />
    </RelativeLayout>

    <!-- Mood Selection -->

    <!-- Reason TextBox -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/AngerButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="#33FF0004"
                android:drawableLeft="@drawable/anger"
                android:text="@string/anger_text"
                android:textColor="@color/TextColorAnger"
                android:textStyle="bold"
                app:iconSize="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/FearButton"
                android:drawableLeft="@drawable/fear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#DBB2FF"
                android:text="@string/fear_text"
                android:textColor="@color/TextColorFear"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/SadButton"
                android:drawableLeft="@drawable/sad"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#331E43CD"
                android:text="@string/sad_text"
                android:textColor="@color/TextColorSad"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ConfuseButton"
                android:drawableLeft="@drawable/confuse"

                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/BackgroundColorConfuse"
                android:text="@string/confuse_text"
                android:textColor="#E3C700"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/SurpriseButton"
                android:drawableLeft="@drawable/surprise"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/BackgroundColorSurprise"
                android:text="@string/surprise_text"
                android:textColor="@color/TextColorSurprise"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Buttons for Mood Selection -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ShameButton"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/BackgroundColorShame"
                    android:drawableLeft="@drawable/shame"
                    android:text="@string/shame_text"
                    android:textColor="@color/TextColorShame"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/HappyButton"
                    android:layout_width="146dp"

                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="#80FFC0CB"
                    android:drawableLeft="@drawable/happy"
                    android:text="@string/happy_text"
                    android:textColor="@color/TextColorHappy"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/DisgustButton"
                android:drawableLeft="@drawable/disgust"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#330AAE26"
                android:text="@string/disgust_text"
                android:textColor="#09851D"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="29dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ReasonWhyInputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reason Why"
        android:inputType="textMultiLine"
        android:maxLines="4" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ReasonWhyCharCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:counterEnabled="true"
        app:counterMaxLength="20">

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/TriggerInputbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Trigger"
        android:inputType="textMultiLine"
        android:maxLines="1" />

    <!-- Trigger TextBox with Character Counter -->


    <!-- Add Photo and Add Location -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/AddLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/add_location_text" />
    <!-- Social Situation Buttons -->

    <LinearLayout
        android:id="@+id/buttonGroupMoodOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/OnePersonButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#193F80" />

        <Button
            android:id="@+id/CrowdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="Crowd"
            android:textColor="#193F80" />

        <Button
            android:id="@+id/AloneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="Alone"
            android:textColor="#193F80" />

        <Button
            android:id="@+id/TwoPeopleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="2+"
            android:textColor="#193F80" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/AddImageButton"
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FAFAFA"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/add_photo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/SubmitPostButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:elevation="20dp"
            android:text="@string/post_button"
            android:textColor="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />

    </LinearLayout>

</LinearLayout>