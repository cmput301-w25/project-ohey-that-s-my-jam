<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:scaleX="1"
    android:scaleY="1">

    <!-- Close Button  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close" />
    </RelativeLayout>

    <!-- Mood Selection -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Select Mood"
        android:textSize="16sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Buttons for Mood Selection -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipAnger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/BackgroundColorAnger"
                android:text="@string/anger_text"
                android:textColor="@color/TextColorAnger" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipDisgust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/disgust_text"
                android:backgroundTint="@color/BackgroundColorDisgust"
                android:textColor="@color/TextColorDisgust" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/happy_text"
                android:textColor="@color/TextColorHappy"
                android:backgroundTint="@color/BackgroundColorHappy" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipFear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/fear_text"
                android:textColor="@color/TextColorFear"
                android:backgroundTint="@color/BackgroundColorFear" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/sad_text"
                android:textColor="@color/TextColorSad"
                android:backgroundTint="@color/BackgroundColorSad" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipShame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/shame_text"
                android:textColor="@color/TextColorShame"
                android:backgroundTint="@color/BackgroundColorShame" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipConfuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/BackgroundColorConfusion"
                android:text="@string/confuse_text"
                android:textColor="@color/TextColorConfusion" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipSurprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/surprise_text"
                android:textColor="@color/TextColorSurprise"
                android:backgroundTint="@color/BackgroundColorSurprise" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Reason TextBox -->

    <EditText
        android:id="@+id/reasonEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Reason Why"
        android:inputType="textMultiLine"
        android:maxLines="4" />

    <!-- Trigger TextBox -->

    <EditText
        android:id="@+id/triggerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Trigger"
        android:inputType="textMultiLine"
        android:maxLines="4" />

    <!-- Social Situation Buttons -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Social Situation"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/buttonGroupMoodOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAlone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="Alone"
            android:textColor="#193F80" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="1"
            android:textColor="#193F80" />

        <Button
            android:id="@+id/button2plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="2+"
            android:textColor="#193F80" />

        <Button
            android:id="@+id/buttonCrowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="Crowd"
            android:textColor="#193F80" />
    </LinearLayout>

    <!-- Add Photo and Add Location -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_photo_text"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/add_location_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D193F80"
            android:text="@string/post_button"
            android:textColor="#193F80" />
    </LinearLayout>

</LinearLayout>