<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@android:color/transparent"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/group" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="141dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:elevation="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/app_logo" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_below="@+id/imageButton6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_filter" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:layout_below="@+id/imageButton5"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="237dp"
            android:layout_toEndOf="@+id/imageButton"
            android:fontFamily="sans-serif"
            android:text="RECENT EVENTS"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />
    </ScrollView>

    <!-- Bottom Navigation Bar -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5E79A6"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"

            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/location" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"

            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/profile" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.IconOnly"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="107dp"
            android:layout_marginEnd="107dp"
            android:layout_toStartOf="@+id/imageButton7"
            android:layout_toEndOf="@+id/imageButton3"
            app:backgroundTint="#FFFFFF"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="#5E78A5"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />


    </RelativeLayout>

</LinearLayout>
