<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="360dp"
        android:layout_height="487dp"
        android:layout_centerHorizontal="true"
        android:translationY="-200dp"
        app:srcCompat="@drawable/oval" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="306dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="top"
        android:text="@string/welcome_back_cap"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="359dp"
        android:background="@drawable/ic_edittext"
        android:fontFamily="@font/roboto_medium"
        android:inputType="text"
        android:text="@string/username_cap"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="429dp"
        android:background="@drawable/ic_edittext"
        android:fontFamily="@font/roboto_medium"
        android:inputType="textVisiblePassword"
        android:text="@string/password_cap"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="521dp"
        android:backgroundTint="@color/blue_nav_bar"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:backgroundTint="#00FFFFFF"
        android:text="FORGOT PASSWORD"
        android:textColor="@color/black"
        android:translationX="35dp"
        />

</RelativeLayout>